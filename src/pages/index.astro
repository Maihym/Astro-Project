---
import Layout from '../layouts/Layout.astro';
import { getCompanyInfo, getContactInfo, getBusinessInfo } from '../config/business';
import { getAllServices, getAllCities } from '../lib/data';

const companyInfo = getCompanyInfo();
const contactInfo = getContactInfo();
const businessInfo = getBusinessInfo();
const services = getAllServices();
const cities = getAllCities();
---

<Layout 
	title={`${companyInfo.name} - Professional Electrical Services in La Mirada, Whittier, Cerritos`}
	description="Licensed electricians providing 24/7 emergency electrical services, residential wiring, and commercial electrical solutions in La Mirada, Whittier, Cerritos and surrounding areas. Free quotes available."
	keywords={[
		"electrician near me",
		"electrical services",
		"emergency electrician",
		"residential electrician",
		"commercial electrician",
		"La Mirada electrician",
		"Whittier electrician",
		"Cerritos electrician",
		"electrical repair",
		"electrical installation"
	]}
>
	<main class="min-h-screen bg-background">
		<!-- Hero Section -->
		<section class="py-20 px-4 bg-gradient-to-br from-primary/10 via-background to-secondary/10">
			<div class="container mx-auto text-center">
				<h1 class="text-4xl md:text-6xl font-bold text-foreground mb-6">
					Professional Electrical Services in Southern California
				</h1>
				<p class="text-xl text-muted-foreground mb-8 max-w-3xl mx-auto">
					{companyInfo.name} provides reliable, licensed electrical services for residential and commercial properties. 
					Available 24/7 for emergency repairs. Quality workmanship you can trust.
				</p>
				<div class="flex flex-col sm:flex-row gap-4 justify-center mb-8">
					<button 
						class="bg-primary text-primary-foreground px-8 py-3 rounded-lg font-semibold hover:bg-primary/90 transition-colors"
						onclick="openBooking('freeQuote')"
					>
						Get Free Quote
					</button>
					<a href="/services" class="border border-input bg-background text-foreground px-8 py-3 rounded-lg font-semibold hover:bg-accent transition-colors">
						View Services
					</a>
				</div>
				<div class="flex flex-col sm:flex-row items-center justify-center gap-6 text-sm text-muted-foreground">
					<div class="flex items-center gap-2">
						<span class="w-2 h-2 bg-green-500 rounded-full"></span>
						<span>Licensed & Insured</span>
					</div>
					<div class="flex items-center gap-2">
						<span class="w-2 h-2 bg-green-500 rounded-full"></span>
						<span>24/7 Emergency Service</span>
					</div>
					<div class="flex items-center gap-2">
						<span class="w-2 h-2 bg-green-500 rounded-full"></span>
						<span>Free Estimates</span>
					</div>
				</div>
			</div>
		</section>

		<!-- Features Section -->
		<section class="py-16 px-4 bg-muted/30">
			<div class="container mx-auto">
				<h2 class="text-3xl font-bold text-center mb-12">Why Choose {companyInfo.name}?</h2>
				<div class="grid md:grid-cols-3 gap-8">
					<div class="text-center p-6">
						<div class="w-16 h-16 bg-primary rounded-full flex items-center justify-center mx-auto mb-4">
							<span class="text-primary-foreground text-2xl">‚ö°</span>
						</div>
						<h3 class="text-xl font-semibold mb-2">Licensed & Insured</h3>
						<p class="text-muted-foreground">Fully licensed electricians with comprehensive insurance coverage for your peace of mind.</p>
					</div>
					<div class="text-center p-6">
						<div class="w-16 h-16 bg-primary rounded-full flex items-center justify-center mx-auto mb-4">
							<span class="text-primary-foreground text-2xl">üõ†Ô∏è</span>
						</div>
						<h3 class="text-xl font-semibold mb-2">Quality Workmanship</h3>
						<p class="text-muted-foreground">We use only the highest quality materials and follow industry best practices.</p>
					</div>
					<div class="text-center p-6">
						<div class="w-16 h-16 bg-primary rounded-full flex items-center justify-center mx-auto mb-4">
							<span class="text-primary-foreground text-2xl">üìû</span>
						</div>
						<h3 class="text-xl font-semibold mb-2">24/7 Emergency Service</h3>
						<p class="text-muted-foreground">Available around the clock for emergency electrical repairs and urgent situations.</p>
					</div>
				</div>
			</div>
		</section>

		<!-- Services Overview Section -->
		<section class="py-16 px-4">
			<div class="container mx-auto">
				<h2 class="text-3xl font-bold text-center mb-12">Our Electrical Services</h2>
				<div class="grid md:grid-cols-3 gap-8">
					{services.map((service) => (
						<a href={`/services/${service.slug}`} class="group">
							<div class="bg-card p-8 rounded-lg border shadow-sm hover:shadow-md transition-all duration-300 group-hover:border-primary/50">
								<div class="text-4xl mb-4">{service.icon}</div>
								<h3 class="text-2xl font-bold mb-4 group-hover:text-primary transition-colors">
									{service.title}
								</h3>
								<p class="text-muted-foreground mb-6">
									{service.shortDescription}
								</p>
								<div class="space-y-2 mb-6">
									{service.features.slice(0, 3).map((feature) => (
										<div class="flex items-center gap-2">
											<span class="w-2 h-2 bg-primary rounded-full"></span>
											<span class="text-sm text-foreground">{feature}</span>
										</div>
									))}
									{service.features.length > 3 && (
										<p class="text-sm text-muted-foreground">
											+{service.features.length - 3} more services
										</p>
									)}
								</div>
								<div class="flex items-center justify-between">
									<div>
										<span class="text-lg font-semibold text-primary">Free Quote</span>
									</div>
									<span class="text-primary group-hover:translate-x-1 transition-transform">‚Üí</span>
								</div>
							</div>
						</a>
					))}
				</div>
			</div>
		</section>

		<!-- Cities We Serve Section -->
		<section class="py-16 px-4 bg-muted/30">
			<div class="container mx-auto">
				<h2 class="text-3xl font-bold text-center mb-12">Cities We Serve</h2>
				<p class="text-xl text-muted-foreground text-center mb-8 max-w-3xl mx-auto">
					We provide professional electrical services in these California cities and surrounding areas.
				</p>
				<div class="grid md:grid-cols-3 gap-6">
					{cities.map((city) => (
						<a href={`/cities/${city.slug}`} class="group">
							<div class="bg-card p-6 rounded-lg border shadow-sm hover:shadow-md transition-all duration-300 group-hover:border-primary/50">
								<h3 class="text-xl font-bold mb-2 group-hover:text-primary transition-colors">
									{city.name}, {city.stateAbbr}
								</h3>
								<p class="text-muted-foreground mb-4">{city.shortDescription}</p>
								<div class="space-y-2 mb-4">
									<div class="flex items-center gap-2">
										<span class="w-2 h-2 bg-primary rounded-full"></span>
										<span class="text-sm text-foreground">Population: {city.population}</span>
									</div>
									<div class="flex items-center gap-2">
										<span class="w-2 h-2 bg-primary rounded-full"></span>
										<span class="text-sm text-foreground">{city.serviceAreas.length} service areas</span>
									</div>
								</div>
								<div class="flex items-center justify-between">
									<span class="text-sm text-muted-foreground">View services in {city.name}</span>
									<span class="text-primary group-hover:translate-x-1 transition-transform">‚Üí</span>
								</div>
							</div>
						</a>
					))}
				</div>
			</div>
		</section>

		<!-- Emergency Service Section -->
		<section class="py-16 px-4 bg-red-50 dark:bg-red-950/20">
			<div class="container mx-auto text-center">
				<h2 class="text-3xl font-bold mb-4 text-red-800 dark:text-red-200">üö® Emergency Electrical Service</h2>
				<p class="text-xl text-red-700 dark:text-red-300 mb-8 max-w-2xl mx-auto">
					Electrical emergency? We're available 24/7 for urgent electrical repairs and power outages.
				</p>
				<div class="flex flex-col sm:flex-row gap-4 justify-center">
					<a 
						href={`tel:${contactInfo.main.phone.replace(/\D/g, '')}`}
						class="bg-red-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-red-700 transition-colors"
					>
						Call {contactInfo.main.phone}
					</a>
					<button 
						class="border border-red-600 text-red-600 px-8 py-3 rounded-lg font-semibold hover:bg-red-600 hover:text-white transition-colors"
						onclick="openBooking('serviceCall')"
					>
						Schedule Service
					</button>
				</div>
			</div>
		</section>

		<!-- CTA Section -->
		<section class="py-16 px-4 bg-primary text-primary-foreground">
			<div class="container mx-auto text-center">
				<h2 class="text-3xl font-bold mb-4">Ready to Get Started?</h2>
				<p class="text-xl mb-8 opacity-90">Contact us today for a free consultation and quote.</p>
				<div class="flex flex-col sm:flex-row gap-4 justify-center">
					<button 
						class="bg-background text-foreground px-8 py-3 rounded-lg font-semibold hover:bg-background/90 transition-colors"
						onclick="openBooking('freeQuote')"
					>
						Get Free Quote
					</button>
					<a 
						href={`tel:${contactInfo.main.phone.replace(/\D/g, '')}`}
						class="border border-primary-foreground text-primary-foreground px-8 py-3 rounded-lg font-semibold hover:bg-primary-foreground/10 transition-colors"
					>
						Call {contactInfo.main.phone}
					</a>
				</div>
			</div>
		</section>
	</main>
</Layout>







