---
import Layout from '../layouts/Layout.astro';
import { getCompanyInfo } from '../config/business';

const companyInfo = getCompanyInfo();
---

<Layout 
	title={`Personalized Booking Demo | ${companyInfo.name}`}
	description="Demo of the new personalized inline booking form with modal"
>
	<main class="min-h-screen bg-background">
		<!-- Hero Section with Inline Form -->
		<section class="py-20 px-4 relative bg-cover bg-center bg-no-repeat" style="background-image: url('/Full Van.jpg');">
			<!-- Overlay for better text readability -->
			<div class="absolute inset-0 bg-black/40"></div>
			<div class="container mx-auto text-center relative z-10">
				<h1 class="text-4xl md:text-6xl font-bold text-white mb-6 drop-shadow-lg">
					Professional Electrical Services in Southern California
				</h1>
				<p class="text-xl text-white/90 mb-8 max-w-3xl mx-auto drop-shadow-md">
					{companyInfo.name} provides reliable, licensed electrical services for residential and commercial properties. 
					Available 24/7 for emergency repairs. Quality workmanship you can trust.
				</p>
				
				<!-- Inline Booking Form -->
				<div id="inline-booking-form" class="max-w-md mx-auto"></div>
				
				<div class="flex flex-col sm:flex-row items-center justify-center gap-6 text-sm text-white/90 mt-8">
					<div class="flex items-center gap-2">
						<span class="w-2 h-2 bg-green-400 rounded-full"></span>
						<span>Licensed & Insured</span>
					</div>
					<div class="flex items-center gap-2">
						<span class="w-2 h-2 bg-green-400 rounded-full"></span>
						<span>24/7 Emergency Service</span>
					</div>
					<div class="flex items-center gap-2">
						<span class="w-2 h-2 bg-green-400 rounded-full"></span>
						<span>Free Estimates</span>
					</div>
				</div>
			</div>
		</section>

		<!-- Features Section -->
		<section class="py-16 px-4 bg-muted/30">
			<div class="container mx-auto">
				<h2 class="text-3xl font-bold text-center mb-12">New Personalized Booking Experience</h2>
				<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
					<div class="text-center p-6">
						<div class="w-16 h-16 bg-primary rounded-full flex items-center justify-center mx-auto mb-4">
							<span class="text-primary-foreground text-2xl">üëã</span>
						</div>
						<h3 class="text-xl font-semibold mb-2">Personalized Experience</h3>
						<p class="text-muted-foreground">Forms address you by name and provide personalized messaging throughout the booking process.</p>
					</div>
					<div class="text-center p-6">
						<div class="w-16 h-16 bg-primary rounded-full flex items-center justify-center mx-auto mb-4">
							<span class="text-primary-foreground text-2xl">üì±</span>
						</div>
						<h3 class="text-xl font-semibold mb-2">Simple Start</h3>
						<p class="text-muted-foreground">Just name and email to get started - no overwhelming forms upfront.</p>
					</div>
					<div class="text-center p-6">
						<div class="w-16 h-16 bg-primary rounded-full flex items-center justify-center mx-auto mb-4">
							<span class="text-primary-foreground text-2xl">üéØ</span>
						</div>
						<h3 class="text-xl font-semibold mb-2">Context-Aware</h3>
						<p class="text-muted-foreground">Different service types and messaging based on the page context (homepage, service page, etc.).</p>
					</div>
					<div class="text-center p-6">
						<div class="w-16 h-16 bg-primary rounded-full flex items-center justify-center mx-auto mb-4">
							<span class="text-primary-foreground text-2xl">‚ö°</span>
						</div>
						<h3 class="text-xl font-semibold mb-2">Quick Start</h3>
						<p class="text-muted-foreground">Minimal friction to begin the booking process with just essential information.</p>
					</div>
					<div class="text-center p-6">
						<div class="w-16 h-16 bg-primary rounded-full flex items-center justify-center mx-auto mb-4">
							<span class="text-primary-foreground text-2xl">üîÑ</span>
						</div>
						<h3 class="text-xl font-semibold mb-2">Progressive Disclosure</h3>
						<p class="text-muted-foreground">Information is collected progressively, reducing cognitive load and improving completion rates.</p>
					</div>
					<div class="text-center p-6">
						<div class="w-16 h-16 bg-primary rounded-full flex items-center justify-center mx-auto mb-4">
							<span class="text-primary-foreground text-2xl">üí¨</span>
						</div>
						<h3 class="text-xl font-semibold mb-2">Conversational Flow</h3>
						<p class="text-muted-foreground">Natural, conversational messaging that guides users through the booking process.</p>
					</div>
				</div>
			</div>
		</section>

		<!-- Integration Examples -->
		<section class="py-16 px-4">
			<div class="container mx-auto">
				<h2 class="text-3xl font-bold text-center mb-12">Integration Examples</h2>
				<div class="grid md:grid-cols-2 gap-8">
					<div class="bg-card p-6 rounded-lg border">
						<h3 class="text-xl font-semibold mb-4">Homepage Hero</h3>
						<p class="text-muted-foreground mb-4">
							Replace the existing "Get Free Quote" button with the inline form.
						</p>
						<pre class="bg-muted p-4 rounded text-sm overflow-x-auto"><code>{`<InlineBookingForm
  variant="hero"
  serviceType="freeQuote"
  onStartBooking={(data) => {
    startBooking(data, 'freeQuote');
  }}
/>`}</code></pre>
					</div>
					<div class="bg-card p-6 rounded-lg border">
						<h3 class="text-xl font-semibold mb-4">Service Page Card</h3>
						<p class="text-muted-foreground mb-4">
							Use card variant for service pages with specific service types.
						</p>
						<pre class="bg-muted p-4 rounded text-sm overflow-x-auto"><code>{`<InlineBookingForm
  variant="card"
  serviceType="serviceCall"
  onStartBooking={(data) => {
    startBooking(data, 'serviceCall');
  }}
/>`}</code></pre>
					</div>
					<div class="bg-card p-6 rounded-lg border">
						<h3 class="text-xl font-semibold mb-4">Minimal Form</h3>
						<p class="text-muted-foreground mb-4">
							Use minimal variant for sidebar or footer CTAs.
						</p>
						<pre class="bg-muted p-4 rounded text-sm overflow-x-auto"><code>{`<InlineBookingForm
  variant="minimal"
  serviceType="inspection"
  onStartBooking={(data) => {
    startBooking(data, 'inspection');
  }}
/>`}</code></pre>
					</div>
					<div class="bg-card p-6 rounded-lg border">
						<h3 class="text-xl font-semibold mb-4">Modal Integration</h3>
						<p class="text-muted-foreground mb-4">
							The personalized modal handles the rest of the booking process.
						</p>
						<pre class="bg-muted p-4 rounded text-sm overflow-x-auto"><code>{`<PersonalizedBookingModal
  isOpen={isModalOpen}
  onClose={closeBooking}
  initialData={initialData}
  defaultServiceType={defaultServiceType}
/>`}</code></pre>
					</div>
				</div>
			</div>
		</section>
	</main>
</Layout>

<script>
	// Simple test without complex React integration
	console.log('Personalized booking demo page loaded');
	
	// Test if we can import the components
	import('../components/booking/InlineBookingForm.js').then((module) => {
		console.log('‚úÖ InlineBookingForm imported successfully');
	}).catch((error) => {
		console.error('‚ùå Failed to import InlineBookingForm:', error);
	});
	
	import('../components/booking/PersonalizedBookingModal.js').then((module) => {
		console.log('‚úÖ PersonalizedBookingModal imported successfully');
	}).catch((error) => {
		console.error('‚ùå Failed to import PersonalizedBookingModal:', error);
	});
</script>
