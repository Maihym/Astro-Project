          </div>
          <div class="text-center">
            <h3 class="text-2xl font-bold text-primary mb-2">{city.area}</h3>
            <p class="text-muted-foreground">Area</p>
          </div>
          <div class="text-center">
            <h3 class="text-2xl font-bold text-primary mb-2">{city.localInfo.established}</h3>
            <p class="text-muted-foreground">Established</p>
          </div>
          <div class="text-center">
            <h3 class="text-2xl font-bold text-primary mb-2">"{city.localInfo.nickname}"</h3>
            <p class="text-muted-foreground">Nickname</p>
          </div>
        </div>
        <div class="mt-12 max-w-4xl mx-auto">
          <p class="text-lg text-muted-foreground text-center mb-8">
            {city.description}
          </p>
          <div class="grid md:grid-cols-2 gap-8">
            <div>
              <h4 class="text-xl font-semibold mb-4">Major Industries</h4>
              <ul class="space-y-2">
                {city.localInfo.majorIndustries.map((industry) => (
                  <li class="flex items-center gap-2">
                    <div class="w-2 h-2 bg-primary rounded-full"></div>
                    <span class="text-muted-foreground">{industry}</span>
                  </li>
                ))}
              </ul>
            </div>
            <div>
              <h4 class="text-xl font-semibold mb-4">Notable Landmarks</h4>
              <ul class="space-y-2">
                {city.localInfo.notableLandmarks.map((landmark) => (
                  <li class="flex items-center gap-2">
                    <div class="w-2 h-2 bg-primary rounded-full"></div>
                    <span class="text-muted-foreground">{landmark}</span>
                  </li>
                ))}
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Service Areas Section -->
    <section class="py-16 px-4 bg-muted/30">
      <div class="container mx-auto">
        <h2 class="text-3xl font-bold text-center mb-12">We Serve These Areas in {city.name}</h2>
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
          {city.serviceAreas.map((area) => (
            <div class="bg-card p-4 rounded-lg border text-center">
              <h3 class="font-semibold">{area}</h3>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <CityFAQ city={city} />

    <!-- Contact Section -->
    <section class="py-16 px-4 bg-primary text-primary-foreground">
      <div class="container mx-auto text-center">
        <h2 class="text-3xl font-bold mb-4">Contact Our {city.name} Office</h2>
        <div class="grid md:grid-cols-3 gap-8 max-w-4xl mx-auto">
          <div>
            <h3 class="text-xl font-semibold mb-2">Phone</h3>
            <p class="opacity-90">{city.contact.phone}</p>
          </div>
          <div>
            <h3 class="text-xl font-semibold mb-2">Email</h3>
            <p class="opacity-90">{city.contact.email}</p>
          </div>
          <div>
            <h3 class="text-xl font-semibold mb-2">Address</h3>
            <p class="opacity-90">{city.contact.address}</p>
          </div>
        </div>
        <button 
          class="bg-background text-foreground px-8 py-3 rounded-lg font-semibold hover:bg-background/90 transition-colors mt-8"
          onclick="openBooking('freeQuote')"
        >
          Get Free Quote
        </button>
      </div>
    </section>
  </main>
</Layout>