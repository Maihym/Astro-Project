---
import Layout from '../../layouts/Layout.astro';
import { getCityBySlug, getAllCities, getAllServices } from '../../lib/data';
import { getCompanyInfo, getContactInfo } from '../../config/business';
import type { City } from '../../lib/data';
import CityFAQ from '../../components/CityFAQ.astro';

export async function getStaticPaths() {
  const cities = getAllCities();
  return cities.map((city) => ({
    params: { city: city.slug },
    props: { city },
  }));
}

interface Props {
  city: City;
}

const { city } = Astro.props;
const services = getAllServices();
const companyInfo = getCompanyInfo();
const contactInfo = getContactInfo();

// Generate LocalBusiness schema for city pages
function generateLocalBusinessSchema(city: City) {
  return {
    "@context": "https://schema.org",
    "@type": "LocalBusiness",
    "name": companyInfo.name,
    "description": `Professional electrical services in ${city.name}, ${city.stateAbbr}. Licensed C-10 electrical contractor serving ${city.name} and surrounding areas.`,
    "url": `https://firstelectric.pro/cities/${city.slug}`,
    "telephone": contactInfo.main.phone,
    "email": contactInfo.main.email,
    "address": {
      "@type": "PostalAddress",
      "streetAddress": contactInfo.main.address.street,
      "addressLocality": contactInfo.main.address.city,
      "addressRegion": contactInfo.main.address.state,
      "postalCode": contactInfo.main.address.zip,
      "addressCountry": "US"
    },
    "geo": {
      "@type": "GeoCoordinates",
      "latitude": city.coordinates.lat,
      "longitude": city.coordinates.lng
    },
    "areaServed": [
      {
        "@type": "City",
        "name": city.name,
        "containedInPlace": {
          "@type": "State",
          "name": city.state
        }
      }
    ],
    "serviceType": "Electrical Services",
    "hasOfferCatalog": {
      "@type": "OfferCatalog",
      "name": "Electrical Services",
      "itemListElement": services.map((service, index) => ({
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": service.title,
          "description": service.description
        },
        "position": index + 1
      }))
    }
  };
}

const localBusinessSchema = generateLocalBusinessSchema(city);
---

<Layout 
  title={city.seo.title} 
  description={city.seo.description}
  city={city}
  breadcrumbs={[
    { name: "Home", url: "/" },
    { name: "Cities", url: "/cities" },
    { name: city.name, url: `/cities/${city.slug}` }
  ]}
>
  <!-- LocalBusiness Schema Markup -->
  <script type="application/ld+json" set:html={JSON.stringify(localBusinessSchema)}></script>
  
  <main class="min-h-screen bg-background">
    <!-- Hero Section -->
    <section class="py-20 px-4 bg-gradient-to-br from-primary/10 to-primary/5">
      <div class="container mx-auto text-center">
        <h1 class="text-4xl md:text-6xl font-bold text-foreground mb-6">
          Electrical Services in {city.name}, {city.stateAbbr}
        </h1>
        <p class="text-xl text-muted-foreground mb-8 max-w-3xl mx-auto">
          Professional electrical services in {city.name}, {city.stateAbbr}. Licensed C-10 electrical contractor serving {city.name} and surrounding areas with 24/7 emergency service.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <button 
            class="bg-primary text-primary-foreground px-8 py-3 rounded-lg font-semibold hover:bg-primary/90 transition-colors"
            onclick="openBooking('freeQuote')"
          >
            Get Free Quote in {city.name}
          </button>
          <a 
            href={`tel:${city.contact.phone}`}
            class="border border-input bg-background text-foreground px-8 py-3 rounded-lg font-semibold hover:bg-accent transition-colors"
          >
            Call {city.contact.phone}
          </a>
        </div>
      </div>
    </section>

    <!-- Trust Signals Section -->
    <section class="py-16 px-4">
      <div class="container mx-auto">
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
          <div class="bg-card p-6 rounded-lg border text-center">
            <div class="text-3xl mb-4">‚ö°</div>
            <h3 class="text-lg font-semibold mb-2">C-10 Licensed</h3>
            <p class="text-muted-foreground text-sm">Licensed C-10 electrical contractor (License #1120441) serving {city.name} and surrounding areas.</p>
          </div>
          <div class="bg-card p-6 rounded-lg border text-center">
            <div class="text-3xl mb-4">üïê</div>
            <h3 class="text-lg font-semibold mb-2">24/7 Service</h3>
            <p class="text-muted-foreground text-sm">24/7 emergency electrical service in {city.name} with 60-minute response time.</p>
          </div>
          <div class="bg-card p-6 rounded-lg border text-center">
            <div class="text-3xl mb-4">üí∞</div>
            <h3 class="text-lg font-semibold mb-2">Free Estimates</h3>
            <p class="text-muted-foreground text-sm">Free estimates for all electrical services in {city.name} with no obligation.</p>
          </div>
          <div class="bg-card p-6 rounded-lg border text-center">
            <div class="text-3xl mb-4">üõ°Ô∏è</div>
            <h3 class="text-lg font-semibold mb-2">Fully Insured</h3>
            <p class="text-muted-foreground text-sm">Fully insured and bonded for your protection and peace of mind in {city.name}.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Services Section -->
    <section class="py-16 px-4 bg-muted/30">
      <div class="container mx-auto">
        <h2 class="text-3xl font-bold text-center mb-12">Our Electrical Services in {city.name}</h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {services.slice(0, 6).map((service) => (
            <div class="bg-card p-6 rounded-lg border shadow-sm">
              <div class="text-3xl mb-4">{service.icon}</div>
              <h3 class="text-xl font-semibold mb-2">{service.title}</h3>
              <p class="text-muted-foreground mb-4">{service.shortDescription}</p>
              <a 
                href={`/services/${service.slug}`}
                class="text-primary hover:text-primary/80 font-semibold"
              >
                Learn More ‚Üí
              </a>
            </div>
          ))}
        </div>
        <div class="text-center mt-8">
          <a 
            href="/services"
            class="bg-primary text-primary-foreground px-6 py-3 rounded-lg font-semibold hover:bg-primary/90 transition-colors"
          >
            View All Services
          </a>
        </div>
      </div>
    </section>

    <!-- Local Information Section -->
    <section class="py-16 px-4">
      <div class="container mx-auto">
        <h2 class="text-3xl font-bold text-center mb-12">About {city.name}, {city.stateAbbr}</h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
          <div class="text-center">
            <h3 class="text-2xl font-bold text-primary mb-2">{city.population}</h3>
