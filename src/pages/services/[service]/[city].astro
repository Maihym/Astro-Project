---
import Layout from '../../../layouts/Layout.astro';
import { getServiceBySlug, getCityBySlug, getServiceCityPaths, generateServiceCitySEO } from '../../../lib/data';
import { getCompanyInfo, getContactInfo } from '../../../config/business';
import type { Service, City } from '../../../lib/data';
import ServiceCityFAQ from '../../../components/ServiceCityFAQ.astro';

export async function getStaticPaths() {
  return getServiceCityPaths();
}

interface Props {
  service: Service;
  city: City;
}

const { service, city } = Astro.props;
const seo = generateServiceCitySEO(service, city);
const companyInfo = getCompanyInfo();
const contactInfo = getContactInfo();

// Generate enhanced schema markup for service + city pages
function generateServiceCitySchema(service: Service, city: City) {
  return {
    "@context": "https://schema.org",
    "@type": "Service",
    "name": `${service.title} in ${city.name}`,
    "description": service.description,
    "provider": {
      "@type": "LocalBusiness",
      "name": companyInfo.name,
      "telephone": contactInfo.main.phone,
      "email": contactInfo.main.email,
      "address": {
        "@type": "PostalAddress",
        "streetAddress": contactInfo.main.address.street,
        "addressLocality": contactInfo.main.address.city,
        "addressRegion": contactInfo.main.address.state,
        "postalCode": contactInfo.main.address.zip,
        "addressCountry": "US"
      },
      "areaServed": [
        {
          "@type": "City",
          "name": city.name,
          "containedInPlace": {
            "@type": "State",
            "name": city.state
          }
        }
      ]
    },
    "areaServed": {
      "@type": "City",
      "name": city.name,
      "containedInPlace": {
        "@type": "State",
        "name": city.state
      }
    },
    "serviceType": service.title,
    "offers": {
      "@type": "Offer",
      "description": `Professional ${service.title.toLowerCase()} services in ${city.name}`,
      "priceCurrency": "USD",
      "availability": "https://schema.org/InStock"
    }
  };
}

// Generate FAQ schema for service + city pages
function generateServiceCityFAQSchema(service: Service, city: City) {
  return {
    "@context": "https://schema.org",
    "@type": "FAQPage",
    "mainEntity": [
      {
        "@type": "Question",
        "name": `Do you provide ${service.title.toLowerCase()} services in ${city.name}?`,
        "acceptedAnswer": {
          "@type": "Answer",
          "text": `Yes, we provide comprehensive ${service.title.toLowerCase()} services in ${city.name}. Our licensed electricians are experienced with local electrical codes and requirements in ${city.name}.`
        }
      },
      {
        "@type": "Question",
        "name": `How quickly can you respond to ${service.title.toLowerCase()} requests in ${city.name}?`,
        "acceptedAnswer": {
          "@type": "Answer",
          "text": `We typically respond to ${service.title.toLowerCase()} requests in ${city.name} within 60 minutes, 24/7. Our team is strategically located to serve ${city.name} and surrounding areas quickly.`
        }
      },
      {
        "@type": "Question",
        "name": `Do you need permits for ${service.title.toLowerCase()} in ${city.name}?`,
        "acceptedAnswer": {
          "@type": "Answer",
          "text": `Most ${service.title.toLowerCase()} work in ${city.name} requires permits. We handle all permit applications and inspections with the ${city.name} building department to ensure compliance.`
        }
      },
      {
        "@type": "Question",
        "name": `What areas of ${city.name} do you serve for ${service.title.toLowerCase()}?`,
        "acceptedAnswer": {
          "@type": "Answer",
          "text": `We serve all areas of ${city.name} for ${service.title.toLowerCase()} services. Contact us to confirm service availability in your specific location within ${city.name}.`
        }
      }
    ]
  };
}

const serviceCitySchema = generateServiceCitySchema(service, city);
const faqSchema = generateServiceCityFAQSchema(service, city);
---

<Layout 
  title={seo.title} 
  description={seo.description}
  service={service}
  city={city}
  breadcrumbs={[
    { name: "Home", url: "/" },
    { name: "Services", url: "/services" },
    { name: service.title, url: `/services/${service.slug}` },
    { name: `${service.title} in ${city.name}`, url: `/services/${service.slug}/${city.slug}` }
  ]}
>
  <!-- Enhanced Schema Markup for Local SEO -->
  <script type="application/ld+json" set:html={JSON.stringify(serviceCitySchema)}></script>
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)}></script>
  <main class="min-h-screen bg-background">
    <!-- Hero Section -->
    <section class="py-20 px-4 bg-gradient-to-br from-primary/10 to-primary/5">
      <div class="container mx-auto text-center">
        <div class="text-6xl mb-6">{service.icon}</div>
        <h1 class="text-4xl md:text-6xl font-bold text-foreground mb-6">
          {service.title} in {city.name}, {city.stateAbbr}
        </h1>
        <p class="text-xl text-muted-foreground mb-8 max-w-3xl mx-auto">
          Professional {service.title.toLowerCase()} services in {city.name}, {city.stateAbbr}. {service.shortDescription} Serving {city.name} and surrounding areas.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <button 
            class="bg-primary text-primary-foreground px-8 py-3 rounded-lg font-semibold hover:bg-primary/90 transition-colors"
            onclick="openBooking('freeQuote')"
          >
            Get Free Quote in {city.name}
          </button>
          <a 
            href={`tel:${city.contact.phone}`}
            class="border border-input bg-background text-foreground px-8 py-3 rounded-lg font-semibold hover:bg-accent transition-colors"
          >
            Call {city.contact.phone}
          </a>
        </div>
      </div>
    </section>

    <!-- Service Details Section -->
    <section class="py-16 px-4">
      <div class="container mx-auto">
        <div class="grid lg:grid-cols-2 gap-12">
          <div>
            <h2 class="text-3xl font-bold mb-8">Our {service.title} Services in {city.name}</h2>
            <p class="text-lg text-muted-foreground mb-8">
              {service.description} We proudly serve {city.name} and the surrounding {city.state} area with professional electrical solutions.
            </p>
            <div class="space-y-4">
              {service.features.map((feature) => (
                <div class="flex items-start gap-3">
                  <div class="w-6 h-6 bg-primary rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                    <span class="text-primary-foreground text-sm">✓</span>
                  </div>
                  <span class="text-foreground">{feature}</span>
                </div>
              ))}
            </div>
          </div>
          <div class="bg-card p-8 rounded-lg border shadow-sm">
            <h3 class="text-2xl font-semibold mb-6">Why Choose Us in {city.name}?</h3>
            <div class="space-y-4">
              {service.benefits.map((benefit) => (
                <div class="flex items-start gap-3">
                  <div class="w-6 h-6 bg-primary rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                    <span class="text-primary-foreground text-sm">✓</span>
                  </div>
                  <span class="text-foreground">{benefit}</span>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Service Areas Section -->
    <section class="py-16 px-4 bg-muted/30">
      <div class="container mx-auto">
        <h2 class="text-3xl font-bold text-center mb-12">We Serve These Areas in {city.name}</h2>
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
          {city.serviceAreas.map((area) => (
            <div class="bg-card p-4 rounded-lg border text-center">
              <h3 class="font-semibold">{area}</h3>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Local Information Section -->
    <section class="py-16 px-4">
      <div class="container mx-auto">
        <h2 class="text-3xl font-bold text-center mb-12">About {city.name}, {city.stateAbbr}</h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
          <div class="text-center">
            <h3 class="text-2xl font-bold text-primary mb-2">{city.population}</h3>
            <p class="text-muted-foreground">Population</p>
          </div>
          <div class="text-center">
            <h3 class="text-2xl font-bold text-primary mb-2">{city.area}</h3>
            <p class="text-muted-foreground">Area</p>
          </div>
          <div class="text-center">
            <h3 class="text-2xl font-bold text-primary mb-2">{city.localInfo.established}</h3>
            <p class="text-muted-foreground">Established</p>
          </div>
          <div class="text-center">
            <h3 class="text-2xl font-bold text-primary mb-2">"{city.localInfo.nickname}"</h3>
            <p class="text-muted-foreground">Nickname</p>
          </div>
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <ServiceCityFAQ service={service} city={city} />

    <!-- Free Quote Section -->
    <section class="py-16 px-4">
      <div class="container mx-auto text-center">
        <h2 class="text-3xl font-bold mb-8">Get Your Free Quote in {city.name}</h2>
        <div class="bg-card p-8 rounded-lg border shadow-sm max-w-md mx-auto">
          <h3 class="text-xl font-semibold mb-4">Ready to Get Started?</h3>
          <p class="text-muted-foreground mb-6">
            Contact us today for a free estimate on {service.title.toLowerCase()} services in {city.name}.
          </p>
          <div class="space-y-4">
            <a 
              href={`tel:${city.contact.phone}`}
              class="block bg-primary text-primary-foreground px-6 py-3 rounded-lg font-semibold hover:bg-primary/90 transition-colors"
            >
              Call {city.contact.phone}
            </a>
            <button 
              class="w-full border border-primary text-primary px-6 py-3 rounded-lg font-semibold hover:bg-primary/10 transition-colors"
              onclick="openBooking('freeQuote')"
            >
              Request Free Quote
            </button>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>