---
// Service Trust Signals Section Component
// Displays licenses, certifications, and trust indicators

import { getCompanyInfo } from '../config/business';

const companyInfo = getCompanyInfo();
---

<section class="py-12 px-4 bg-muted/30">
  <div class="container mx-auto">
    <div class="grid md:grid-cols-4 gap-6 text-center">
      <div class="bg-card p-6 rounded-lg border">
        <div class="text-2xl font-bold text-primary mb-2">C-10 Licensed</div>
        <div class="text-sm text-muted-foreground">{companyInfo.license}</div>
      </div>
      <div class="bg-card p-6 rounded-lg border">
        <div class="text-2xl font-bold text-primary mb-2">24/7 Service</div>
        <div class="text-sm text-muted-foreground">Emergency Available</div>
      </div>
      <div class="bg-card p-6 rounded-lg border">
        <div class="text-2xl font-bold text-primary mb-2">Free Estimates</div>
        <div class="text-sm text-muted-foreground">No Obligation</div>
      </div>
      <div class="bg-card p-6 rounded-lg border">
        <div class="text-2xl font-bold text-primary mb-2">Fully Insured</div>
        <div class="text-sm text-muted-foreground">Bonded & Protected</div>
      </div>
    </div>
  </div>
</section>
