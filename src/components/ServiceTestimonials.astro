---
// Service Testimonials Section Component
// Displays customer reviews and ratings

export interface Props {
  service?: {
    title: string;
  };
}

const { service } = Astro.props;

// Sample testimonials - in a real app, this would come from a data source
const testimonials = [
  {
    name: "Sarah Johnson",
    location: "La Mirada, CA",
    rating: 5,
    text: "First Electric came out for our electrical work and fixed our issue within an hour. Professional, knowledgeable, and reasonably priced. Highly recommend!"
  },
  {
    name: "Mike Rodriguez", 
    location: "Whittier, CA",
    rating: 5,
    text: "Excellent service for our electrical project. The team was professional, clean, and completed the work on time. Great communication throughout the process."
  },
  {
    name: "Jennifer Chen",
    location: "Cerritos, CA", 
    rating: 5,
    text: "We needed electrical work in our home. First Electric handled everything from permits to final inspection. The work was done professionally and on schedule."
  }
];
---

<section class="py-16 px-4">
  <div class="container mx-auto">
    <h2 class="text-3xl font-bold text-center mb-12">What Our Customers Say</h2>
    <div class="grid md:grid-cols-3 gap-8">
      {testimonials.map((testimonial) => (
        <div class="bg-card p-6 rounded-lg border shadow-sm">
          <div class="flex items-center gap-1 mb-4">
            {Array.from({ length: testimonial.rating }, () => (
              <span class="text-yellow-400 text-xl">â˜…</span>
            ))}
          </div>
          <p class="text-muted-foreground mb-4">
            "{testimonial.text}"
          </p>
          <div class="text-sm font-semibold">{testimonial.name}</div>
          <div class="text-sm text-muted-foreground">{testimonial.location}</div>
        </div>
      ))}
    </div>
  </div>
</section>
