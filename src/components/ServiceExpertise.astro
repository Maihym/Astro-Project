---
// Service Expertise Component
// Displays local expertise and common issues in a focused format

export interface Props {
  service: {
    title: string;
    localExpertise?: {
      commonIssues: string[];
      codeRequirements: string;
      permitProcess?: string;
    };
  };
}

const { service } = Astro.props;
---

{service.localExpertise && (
  <section class="py-16 px-4 bg-muted/30">
    <div class="container mx-auto">
      <h2 class="text-3xl font-bold text-center mb-12">Local Expertise</h2>
      <div class="max-w-4xl mx-auto">
        <div class="grid md:grid-cols-2 gap-8">
          <div class="bg-card p-8 rounded-lg border">
            <h3 class="text-xl font-semibold mb-6 flex items-center gap-3">
              <div class="w-8 h-8 bg-primary/10 rounded-full flex items-center justify-center">
                <svg class="w-4 h-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.732-.833-2.5 0L4.268 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                </svg>
              </div>
              Common Issues We Address
            </h3>
            <ul class="space-y-3">
              {service.localExpertise.commonIssues.map((issue) => (
                <li class="flex items-start gap-3">
                  <div class="w-2 h-2 bg-primary rounded-full mt-2 flex-shrink-0"></div>
                  <span class="text-muted-foreground">{issue}</span>
                </li>
              ))}
            </ul>
          </div>
          
          <div class="bg-card p-8 rounded-lg border">
            <h3 class="text-xl font-semibold mb-6 flex items-center gap-3">
              <div class="w-8 h-8 bg-primary/10 rounded-full flex items-center justify-center">
                <svg class="w-4 h-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                </svg>
              </div>
              Code Compliance
            </h3>
            <p class="text-muted-foreground mb-4">{service.localExpertise.codeRequirements}</p>
            {service.localExpertise.permitProcess && (
              <div class="bg-muted/50 p-4 rounded-lg">
                <h4 class="font-semibold mb-2">Permit Process</h4>
                <p class="text-sm text-muted-foreground">{service.localExpertise.permitProcess}</p>
              </div>
            )}
          </div>
        </div>
      </div>
    </div>
  </section>
)}
