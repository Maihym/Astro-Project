---
// Service Benefits Section Component
// Displays what customers get from the service

export interface Props {
  service: {
    title: string;
    benefits: string[];
  };
}

const { service } = Astro.props;
---

<section class="py-16 px-4">
  <div class="container mx-auto">
    <h2 class="text-3xl font-bold text-center mb-12">What You Get</h2>
    <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
      {service.benefits.map((benefit) => (
        <div class="flex items-start gap-4">
          <div class="w-8 h-8 bg-primary rounded-full flex items-center justify-center flex-shrink-0 mt-1">
            <span class="text-primary-foreground text-sm">âœ“</span>
          </div>
          <div>
            <h3 class="text-lg font-semibold mb-2">{benefit}</h3>
            <p class="text-muted-foreground">Experience the difference with our professional approach to electrical services.</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
